<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#DC0A2D"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="108dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/pokeball">
            </ImageView>
            <ImageView
                android:layout_width="106dp"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/pok_dex">
            </ImageView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp">
        <EditText
            android:layout_width="320dp"
            android:layout_height="32dp"
            android:background="@drawable/font_search"
            >
        </EditText>
        <ImageButton
            android:layout_marginLeft="16dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/hovering_false">
        </ImageButton>
    </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="382dp"
    android:layout_height="match_parent"
    android:background="@drawable/font_stylelist"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="4dp"
    >
        <androidx.recyclerview.widget.RecyclerView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:itemCount="20"
            tools:listitem="@layout/pokedex_list" />
</LinearLayout>
    </LinearLayout>
